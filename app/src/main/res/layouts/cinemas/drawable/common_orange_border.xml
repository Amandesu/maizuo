<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 边框颜色值 -->
    <item>
        <shape>
            <solid android:color="#ff5f16" />
        </shape>
    </item>

    <!--这个是按钮边框设置为四周 并且宽度为1-->
    <item
        android:right="1dp"
        android:left="1dp"
        android:top="1dp"
        android:bottom="1dp">
        <shape>
            <!--这个是背景颜色-->
            <solid android:color="#ffffff" />

        </shape>
    </item>
</layer-list>