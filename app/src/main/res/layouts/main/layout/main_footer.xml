<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="49dp"
    android:orientation="horizontal" >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_weight="1.0"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:paddingTop="8dp"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:src="@drawable/main_footer_movie"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#797d82"
            android:textSize="12dp"
            android:text="电影"/>
    </LinearLayout>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_weight="1.0"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:paddingTop="8dp"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:src="@drawable/main_footer_cinema"
            android:id="@+id/footer_main_cinema_icon"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#797d82"
            android:textSize="12dp"
            android:text="影院"/>
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_weight="1.0"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:paddingTop="8dp"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:src="@drawable/main_footer_offer"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#797d82"
            android:textSize="12dp"
            android:text="特惠"/>
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_weight="1.0"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:paddingTop="8dp"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:src="@drawable/main_footer_user"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#797d82"
            android:textSize="12dp"
            android:text="我的"/>
    </LinearLayout>

</LinearLayout>

